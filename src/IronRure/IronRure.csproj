<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="IronRure.Batteries-Darwin" Version="0.0.2" />
    <PackageReference Include="IronRure.Batteries-Windows" Version="0.0.1" />
  </ItemGroup>
  <ItemGroup>
    <None Update="runtimes\win-x64\native\*">
      <PackagePath>runtimes/win-x64/native/</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Update="runtimes\win-x86\native\*">
      <PackagePath>runtimes/win-x86/native/</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Update="runtimes\osx\native\*">
      <PackagePath>runtimes/osx/native/</PackagePath>
      <Pack>true</Pack>
    </None>
  </ItemGroup>
</Project>
